<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText">
    android:background="@color/fondo_azul_claro">

    <EditText
        android:id="@+id/input_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título:"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/input_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Autor:"
        android:layout_below="@id/input_titulo"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/input_año"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año:"
        android:layout_below="@id/input_autor"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/input_sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sinopsis:"
        android:layout_below="@id/input_año" />
</RelativeLayout>
